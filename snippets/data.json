{
  "Simple useState": {
    "prefix": "us",
    "body": [
      "const [${1:state}, set${1/(.*)/${1:/capitalize}/}] = useState(${2:null})"
    ],
    "description": "simple useState snippet"
  },

  "Simple useEffect": {
    "prefix": "ue",
    "body": ["useEffect(() => {", "  $0", "}, [${1:deps}])"],
    "description": "simple useEffect snippet"
  },

  "Debug useEffect": {
    "prefix": "ued",
    "body": [
      "useEffect(() => {",
      "  console.log(${1:variable})",
      "}, [${1:variable}])"
    ],
    "description": "useEffect debugging snippet"
  },

  "Default Function Component": {
    "prefix": "dfc",
    "body": [
      "",
      "",
      "export default function ${1:Component}() {",
      "  return (",
      "    <></>",
      "  );",
      "}"
    ],
    "description": "delete `import react from 'react';`"
  },

  "Arrow Function Component": {
    "prefix": "afc",
    "body": [
      "import React from 'react';",
      "",
      "interface Props {",
      "  $3",
      "}",
      "",
      "const ${1:Component}: React.FC<Props> = ({ $2 }) => {",
      "  return (",
      "    <></>",
      "  );",
      "};",
      "",
      "export default ${1:Component};"
    ],
    "description": "arrow function component with type"
  },

  "Export Function Component": {
    "prefix": "efc",
    "body": [
      "",
      "",
      "function ${1:Component}() {",
      "  return (",
      "    <></>",
      "  );",
      "}",
      "",
      "export { ${1:Component} };"
    ],
    "description": "named export for component"
  }
}
